---
import { Icon } from 'astro-icon';
// import { SITE } from '~/config.mjs';
// import { getHomePermalink } from '~/utils/permalinks';

interface SocialLink {
  icon: string;
  href: string;
  ariaLabel?: string;
}

export interface Props {
  socialLinks?: Array<SocialLink>;
}

const { socialLinks = [
  { icon: 'mdi:facebook', href: '#', ariaLabel: 'Facebook' },
  { icon: 'mdi:instagram', href: '#', ariaLabel: 'Instagram' },
  { icon: 'mdi:youtube', href: '#', ariaLabel: 'YouTube' },
  { icon: 'mdi:linkedin', href: '#', ariaLabel: 'LinkedIn' }
]} = Astro.props;
---

<footer class="bg-[#556b2f] text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-4">
    <div class="flex flex-wrap items-center justify-between">
      <div class="flex space-x-3 mb-4 md:mb-0">
        {socialLinks.map(({ icon, href, ariaLabel }) => (
          <a 
            href={href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={ariaLabel}
            class="bg-transparent hover:bg-white/10 p-2 rounded-md transition-colors duration-200"
          >
            <Icon name={icon} class="w-6 h-6 text-white" />
          </a>
        ))}
      </div>
      
      <div class="flex flex-col md:flex-row items-end md:items-center md:space-x-8">
        <div class="text-sm text-white/90">
          Pol√≠tica - aviso legal de datos
        </div>
        <div class="text-sm text-white/90">
          Todos los derechos reservados
        </div>
        <div class="text-sm text-white/90">
          <a href="https://www.sistemasautoorganizados.com" target="_blank" rel="noopener noreferrer" class="hover:underline">
            www.sistemasautoorganizados.com
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
